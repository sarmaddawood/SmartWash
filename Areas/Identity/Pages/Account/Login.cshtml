@page
@model LoginModel

@{
    ViewData["Title"] = "Secure Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SmartWash</title>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;800&display=swap" rel="stylesheet">
    <style>
        :root {
            --accent-orange: #FF8F00;
            --dark-blue: #1A1F36;
        }
        body {
            background: linear-gradient(135deg, #F0F4F8 0%, #E2E8F0 100%);
            font-family: 'Inter', sans-serif;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }
        .auth-card {
            background: white;
            border-radius: 24px;
            box-shadow: 0 20px 50px rgba(26, 31, 54, 0.1);
            width: 100%;
            max-width: 440px;
            padding: 40px;
            border: 1px solid rgba(255,255,255,0.8);
        }
        .brand-header {
            text-align: center;
            margin-bottom: 40px;
        }
        .brand-logo {
            font-size: 2rem;
            font-weight: 800;
            color: var(--dark-blue);
            margin-bottom: 8px;
        }
        .brand-logo i { color: var(--accent-orange); margin-right: 8px; }
        
        .form-control {
            border-radius: 12px;
            padding: 12px 18px;
            border: 1px solid #E2E8F0;
            background: #F8FAFC;
        }
        .form-control:focus {
            box-shadow: 0 0 0 4px rgba(255, 143, 0, 0.1);
            border-color: var(--accent-orange);
        }
        .btn-primary {
            background: var(--accent-orange);
            border: none;
            padding: 14px;
            border-radius: 14px;
            font-weight: 700;
            transition: all 0.2s ease;
        }
        .btn-primary:hover {
            transform: translateY(-2px);
            background: #E67E00;
            box-shadow: 0 8px 20px rgba(255, 143, 0, 0.3);
        }
        .auth-link {
            color: var(--dark-blue);
            font-weight: 600;
            text-decoration: none;
        }
        .auth-link:hover { color: var(--accent-orange); }
    </style>
</head>
<body>
    <div class="auth-card">
        <div class="brand-header">
            <div class="brand-logo"><i class="bi bi-water"></i>SmartWash</div>
            <p class="text-muted">High-performance garment care management</p>
        </div>

        <form id="account" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>
            
            <div class="mb-4">
                <label asp-for="Input.Email" class="form-label small fw-bold text-uppercase text-muted">Email Address</label>
                <input asp-for="Input.Email" class="form-control" placeholder="name@company.com" />
                <span asp-validation-for="Input.Email" class="text-danger small"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Input.Password" class="form-label small fw-bold text-uppercase text-muted">Password</label>
                <input asp-for="Input.Password" type="password" class="form-control" placeholder="••••••••" />
                <span asp-validation-for="Input.Password" class="text-danger small"></span>
            </div>

            <div class="d-flex justify-content-between align-items-center mb-4">
                <div class="form-check">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    <label class="form-check-label small" asp-for="Input.RememberMe">Keep me logged in</label>
                </div>
                <a id="forgot-password" asp-page="./ForgotPassword" class="small auth-link">Forgot?</a>
            </div>

            <button type="submit" class="w-100 btn btn-primary mb-4">Initialize Session</button>

            <div class="text-center">
                <p class="text-muted small">Access forbidden? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="auth-link">Request Account</a></p>
            </div>
        </form>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
</body>
</html>
