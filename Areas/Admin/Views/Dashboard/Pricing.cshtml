@model List<SmartWash.Models.ServicePrice>
@{
    Layout = "_DashboardLayout";
    ViewData["Title"] = "Service Pricing";
    ViewData["ActivePage"] = "AdminPricing";
}

<div class="d-flex justify-content-between align-items-center mb-5">
    <div>
        <h3 class="fw-bold mb-1">Economics</h3>
        <p class="text-muted small mb-0 fw-medium">Configure service rates and global pricing</p>
    </div>
    <button type="button" class="btn btn-primary d-flex align-items-center" data-bs-toggle="modal" data-bs-target="#createServiceModal">
        <i class="bi bi-plus-lg me-2"></i> Add Service
    </button>
</div>

<div class="row g-4">
    @if (!Model.Any())
    {
        <div class="col-12">
            <div class="card border-0 p-5 text-center shadow-sm rounded-4">
                <i class="bi bi-tags text-light-emphasis mb-3" style="font-size: 3rem;"></i>
                <h4 class="fw-bold">No Services Configured</h4>
                <p class="text-muted">Start by adding your first service and setting its price.</p>
                <div>
                    <button class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#createServiceModal">Add Service</button>
                </div>
            </div>
        </div>
    }
    @foreach (var item in Model)
    {
        <div class="col-md-4">
            <div class="card border-0 p-2 @(!item.IsActive ? "opacity-50" : "")">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <div class="d-flex align-items-center">
                            <h6 class="fw-bold mb-0 text-muted text-uppercase small me-2">@item.ServiceName</h6>
                            @if (!item.IsActive)
                            {
                                <span class="badge bg-secondary small">Inactive</span>
                            }
                        </div>
                        <div class="dropdown">
                            <button class="btn btn-sm btn-light rounded-circle" type="button" data-bs-toggle="dropdown">
                                <i class="bi bi-three-dots-vertical"></i>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end shadow-sm border-0">
                                <li>
                                    <form asp-action="ToggleService" method="post">
                                        <input type="hidden" name="id" value="@item.Id" />
                                        <button type="submit" class="dropdown-item small">
                                            @(item.IsActive ? "Deactivate" : "Activate")
                                        </button>
                                    </form>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <form asp-action="DeleteService" method="post" onsubmit="return confirm('Are you sure you want to delete this service?');">
                                        <input type="hidden" name="id" value="@item.Id" />
                                        <button type="submit" class="dropdown-item text-danger small">Delete</button>
                                    </form>
                                </li>
                            </ul>
                        </div>
                    </div>
                    
                    <form asp-action="UpdatePrice" method="post">
                        <input type="hidden" name="id" value="@item.Id" />
                        <div class="input-group mb-4">
                            <span class="input-group-text bg-light border-0 fw-bold">₱</span>
                            <input type="number" name="newPrice" class="form-control bg-light border-0 fw-bold" value="@item.PricePerUnit.ToString("0.00")" step="0.01" @(!item.IsActive ? "disabled" : "") />
                        </div>
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="small text-muted">@item.UpdatedAt.ToString("MMM dd")</span>
                            <button type="submit" class="btn btn-primary btn-sm px-4" @(!item.IsActive ? "disabled" : "")>Save Rate</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    }
</div>

<!-- Create Service Modal -->
<div class="modal fade" id="createServiceModal" tabindex="-1" aria-labelledby="createServiceModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content border-0 shadow rounded-4">
      <div class="modal-header border-0 pb-0">
        <h5 class="modal-title fw-bold" id="createServiceModalLabel">Add New Service</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <form asp-action="CreateService" method="post">
          <div class="modal-body">
              <div class="mb-3">
                  <label class="form-label small fw-bold text-muted text-uppercase">Service Name</label>
                  <input type="text" name="serviceName" class="form-control bg-light border-0" required placeholder="e.g. Dry Cleaning" />
              </div>
              <div class="mb-3">
                  <label class="form-label small fw-bold text-muted text-uppercase">Price Per Unit (₱)</label>
                  <input type="number" name="price" class="form-control bg-light border-0" required step="0.01" min="0" placeholder="0.00" />
              </div>
          </div>
          <div class="modal-footer border-0 pt-0">
            <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-primary">Create Service</button>
          </div>
      </form>
    </div>
  </div>
</div>
