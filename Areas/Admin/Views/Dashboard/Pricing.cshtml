@model List<SmartWash.Models.ServicePrice>
@{
    Layout = "_DashboardLayout";
    ViewData["Title"] = "Service Pricing";
    ViewData["ActivePage"] = "AdminPricing";
}

<div class="d-flex justify-content-between align-items-center mb-5">
    <div>
        <h3 class="fw-bold mb-1">Economics</h3>
        <p class="text-muted small mb-0 fw-medium">Configure service rates and global pricing</p>
    </div>
</div>

    <div class="row g-4">
        @foreach (var item in Model)
        {
            <div class="col-md-4">
                <div class="card border-0 p-2">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <h6 class="fw-bold mb-0 text-muted text-uppercase small">@item.ServiceName</h6>
                            <i class="bi bi-tag-fill text-primary"></i>
                        </div>
                        
                        <form asp-action="UpdatePrice" method="post">
                            <input type="hidden" name="id" value="@item.Id" />
                            <div class="input-group mb-4">
                                <span class="input-group-text bg-light border-0 fw-bold">â‚±</span>
                                <input type="number" name="newPrice" class="form-control bg-light border-0 fw-bold" value="@item.PricePerUnit.ToString("0.00")" step="0.01" />
                            </div>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="small text-muted">@item.UpdatedAt.ToString("MMM dd")</span>
                                <button type="submit" class="btn btn-primary btn-sm px-4">Save Rate</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
