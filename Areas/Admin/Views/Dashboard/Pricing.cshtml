@model List<SmartWash.Models.ServicePrice>
@{
    Layout = "_DashboardLayout";
    ViewData["Title"] = "Service Pricing";
    ViewData["ActivePage"] = "AdminPricing";
}

<div class="row align-items-center mb-4">
    <div class="col-md-6">
        <h2 class="fw-bold mb-1">Pricing Management</h2>
        <p class="text-muted mb-0">Adjust rates for laundry and dry cleaning services</p>
    </div>
</div>

<div class="row g-4">
    @foreach (var item in Model)
    {
        <div class="col-md-4">
            <div class="card border-0 shadow-sm rounded-4 h-100">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h5 class="fw-bold mb-0">@item.ServiceName</h5>
                        <div class="bg-primary-subtle text-primary p-2 rounded-3">
                            <i class="bi bi-tag-fill"></i>
                        </div>
                    </div>
                    
                    <form asp-action="UpdatePrice" method="post">
                        <input type="hidden" name="id" value="@item.Id" />
                        <div class="input-group mb-3">
                            <span class="input-group-text bg-white border-end-0">â‚±</span>
                            <input type="number" name="newPrice" class="form-control border-start-0" value="@item.PricePerUnit.ToString("0.00")" step="0.01" />
                        </div>
                        <div class="d-flex justify-content-between align-items-center mt-4">
                            <span class="small text-muted">Last updated: @item.UpdatedAt.ToString("MMM dd")</span>
                            <button type="submit" class="btn btn-primary btn-sm rounded-pill px-3">Update</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    }
    
    @if (!Model.Any())
    {
        <div class="col-12">
            <div class="alert alert-info rounded-4 border-0 p-4">
                <i class="bi bi-info-circle me-2"></i> No service prices configured yet. Start by seeding the database.
            </div>
        </div>
    }
</div>
