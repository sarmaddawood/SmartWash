@model SmartWash.ViewModels.Admin.AdminOrdersViewModel
@{
    Layout = "_DashboardLayout";
    ViewData["Title"] = "Global Order Registry";
    ViewData["ActivePage"] = "AdminDashboard";
}

<div class="row mb-4 align-items-center">
    <div class="col-md-6">
        <h2 class="fw-bold mb-1">Order Registry</h2>
        <p class="text-muted mb-0">Complete historical log of all transactions</p>
    </div>
    <div class="col-md-6 text-md-end mt-3 mt-md-0">
        <a asp-action="ExportOrdersCsv" class="btn btn-outline-primary rounded-pill px-4 shadow-sm me-2">
            <i class="bi bi-download me-2"></i> Export CSV
        </a>
    </div>
</div>

<form id="bulkForm" asp-action="BulkUpdateStatus" method="post">
    @Html.AntiForgeryToken()
    <div class="card border-0 shadow-sm rounded-4 mb-4">
        <div class="card-body p-3 d-flex justify-content-between align-items-center">
            <div class="d-flex flex-wrap gap-2">
                <a asp-action="Orders" asp-route-status="All" class="btn btn-sm rounded-pill px-4 @(Model.CurrentStatus == "All" ? "btn-primary" : "btn-light")">All Orders</a>
                <a asp-action="Orders" asp-route-status="Pending" class="btn btn-sm rounded-pill px-4 @(Model.CurrentStatus == "Pending" ? "btn-primary" : "btn-light")">Pending</a>
                <a asp-action="Orders" asp-route-status="InProgress" class="btn btn-sm rounded-pill px-4 @(Model.CurrentStatus == "InProgress" ? "btn-primary" : "btn-light")">In Progress</a>
                <a asp-action="Orders" asp-route-status="Delivered" class="btn btn-sm rounded-pill px-4 @(Model.CurrentStatus == "Delivered" ? "btn-primary" : "btn-light")">Delivered</a>
            </div>
            
            <div class="d-flex gap-2">
                <select name="newStatus" class="form-select form-select-sm rounded-pill" style="width: 150px;" required>
                    <option value="">Bulk Action...</option>
                    <option value="InProgress">Mark InProgress</option>
                    <option value="Ready">Mark Ready</option>
                    <option value="Delivered">Mark Delivered</option>
                </select>
                <button type="submit" class="btn btn-sm btn-dark rounded-pill px-3">Apply</button>
            </div>
        </div>
    </div>

    <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
        <div class="table-responsive">
            <table class="table align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4" style="width: 40px;"><input type="checkbox" id="selectAll" class="form-check-input"></th>
                        <th>Order ID / Date</th>
                        <th>Customer</th>
                        <th>Items</th>
                        <th>Staff Assigned</th>
                        <th>Status</th>
                        <th class="text-end pe-4">Revenue</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model.Orders)
                    {
                        <tr>
                            <td class="ps-4"><input type="checkbox" name="orderIds" value="@order.Id" class="form-check-input order-checkbox"></td>
                            <td>
                                <div class="fw-bold">#@order.Id.ToString().Substring(0, 8)</div>
                                <div class="small text-muted">@order.OrderDate.ToString("MMM dd, yyyy")</div>
                            </td>
                            <td>@order.Customer?.FullName</td>
                            <td>@order.Items.Count Items (@order.Items.Sum(i => i.Quantity) Units)</td>
                            <td>
                                <div class="dropdown">
                                    <button class="btn btn-sm btn-outline-secondary dropdown-toggle rounded-pill" type="button" data-bs-toggle="dropdown">
                                        @(Model.StaffUsers.FirstOrDefault(s => s.Id == order.AssignedToId)?.Email ?? "Unassigned")
                                    </button>
                                    <ul class="dropdown-menu">
                                        @foreach (var staff in Model.StaffUsers)
                                        {
                                            <li>
                                                <button type="button" onclick="assignStaff('@order.Id', '@staff.Id')" class="dropdown-item">@staff.Email</button>
                                            </li>
                                        }
                                    </ul>
                                </div>
                            </td>
                            <td>
                                <span class="badge rounded-pill bg-light text-dark border px-3">@order.Status</span>
                            </td>
                            <td class="text-end pe-4 fw-bold text-primary">â‚±@order.TotalPrice.ToString("N2")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</form>

<form id="assignForm" asp-action="AssignStaff" method="post" class="d-none">
    @Html.AntiForgeryToken()
    <input type="hidden" name="orderId" id="assignOrderId" />
    <input type="hidden" name="staffId" id="assignStaffId" />
</form>

@section Scripts {
    <script>
        document.getElementById('selectAll').addEventListener('change', function() {
            document.querySelectorAll('.order-checkbox').forEach(cb => cb.checked = this.checked);
        });

        function assignStaff(orderId, staffId) {
            document.getElementById('assignOrderId').value = orderId;
            document.getElementById('assignStaffId').value = staffId;
            document.getElementById('assignForm').submit();
        }
    </script>
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
