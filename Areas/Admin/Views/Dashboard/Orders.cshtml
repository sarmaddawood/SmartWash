@model SmartWash.ViewModels.Admin.AdminOrdersViewModel
@{
    Layout = "_DashboardLayout";
    ViewData["Title"] = "Global Order Registry";
    ViewData["ActivePage"] = "AdminDashboard";
}

<div class="d-flex justify-content-between align-items-center mb-5">
    <div>
        <h3 class="fw-bold mb-1">Global Registry</h3>
        <p class="text-muted small mb-0 fw-medium">Complete historical transaction ledger</p>
    </div>
    <div class="d-none d-md-flex gap-2">
        <a asp-action="Orders" asp-route-status="All" class="btn btn-sm px-4 @(Model.CurrentStatus == "All" ? "btn-primary" : "btn-outline-light text-dark")">All Sessions</a>
        <a asp-action="Orders" asp-route-status="Pending" class="btn btn-sm px-4 @(Model.CurrentStatus == "Pending" ? "btn-primary" : "btn-outline-light text-dark")">Pending</a>
        <a asp-action="Orders" asp-route-status="InProgress" class="btn btn-sm px-4 @(Model.CurrentStatus == "InProgress" ? "btn-primary" : "btn-outline-light text-dark")">Operational</a>
        <a asp-action="ExportOrdersCsv" class="btn btn-light btn-sm px-3 ms-3"><i class="bi bi-download me-1"></i> Export</a>
    </div>
</div>

<form id="bulkForm" asp-action="BulkUpdateStatus" method="post" class="mb-4">
    @Html.AntiForgeryToken()
    <div class="card border-0 p-3 shadow-none bg-white-50" style="background: rgba(255,255,255,0.4);">
        <div class="d-flex justify-content-between align-items-center">
            <div class="small fw-bold text-muted text-uppercase d-flex align-items-center">
                <i class="bi bi-layers-fill me-2"></i> Batch Processing
            </div>
            <div class="d-flex gap-2">
                <select name="newStatus" class="form-select form-select-sm rounded-pill border-0 shadow-sm" style="width: 180px;" required>
                    <option value="">Status Action...</option>
                    <option value="InProgress">Mark Operational</option>
                    <option value="Ready">Mark Verified</option>
                    <option value="Delivered">Mark Finalized</option>
                </select>
                <button type="submit" class="btn btn-dark btn-sm px-4">Apply to Selected</button>
            </div>
        </div>
    </div>

    <div class="card border-0">
        <div class="table-responsive">
            <table class="table align-middle mb-0">
                <thead>
                    <tr>
                        <th class="ps-4 border-0" style="width: 40px;"><input type="checkbox" id="selectAll" class="form-check-input"></th>
                        <th class="border-0 text-muted small fw-bold text-uppercase">Identifier</th>
                        <th class="border-0 text-muted small fw-bold text-uppercase">Client</th>
                        <th class="border-0 text-muted small fw-bold text-uppercase">Quantity</th>
                        <th class="border-0 text-muted small fw-bold text-uppercase">Operational Lead</th>
                        <th class="border-0 text-muted small fw-bold text-uppercase">Condition</th>
                        <th class="border-0 text-muted small fw-bold text-uppercase text-end pe-4">Credit</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model.Orders)
                    {
                        <tr style="border-bottom: 8px solid transparent;">
                            <td class="ps-4 border-0"><input type="checkbox" name="orderIds" value="@order.Id" class="form-check-input order-checkbox"></td>
                            <td class="border-0">
                                <div class="fw-bold text-dark">#@order.Id.ToString().Substring(0, 8)</div>
                                <div class="small text-muted">@order.OrderDate.ToString("MMM dd")</div>
                            </td>
                            <td class="border-0 fw-medium">@order.Customer?.FullName</td>
                            <td class="border-0"><span class="badge bg-light text-dark px-3">@order.Items.Sum(i => i.Quantity) Units</span></td>
                            <td class="border-0">
                                <div class="dropdown">
                                    <button class="btn btn-sm btn-outline-light text-muted border-0 dropdown-toggle px-0 fw-bold" type="button" data-bs-toggle="dropdown">
                                        @(Model.StaffUsers.FirstOrDefault(s => s.Id == order.AssignedToId)?.Email?.Split('@')[0] ?? "Not Assigned")
                                    </button>
                                    <ul class="dropdown-menu border-0 shadow-lg">
                                        @foreach (var staff in Model.StaffUsers)
                                        {
                                            <li>
                                                <button type="button" onclick="assignStaff('@order.Id', '@staff.Id')" class="dropdown-item">@staff.Email</button>
                                            </li>
                                        }
                                    </ul>
                                </div>
                            </td>
                            <td class="border-0">
                                <span class="badge rounded-pill @(order.Status == "Delivered" ? "bg-success" : "bg-primary") px-3">@order.Status</span>
                            </td>
                            <td class="border-0 text-end pe-4 fw-bold">â‚±@order.TotalPrice.ToString("N0")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</form>

<form id="assignForm" asp-action="AssignStaff" method="post" class="d-none">
    @Html.AntiForgeryToken()
    <input type="hidden" name="orderId" id="assignOrderId" />
    <input type="hidden" name="staffId" id="assignStaffId" />
</form>

@section Scripts {
    <script>
        document.getElementById('selectAll').addEventListener('change', function() {
            document.querySelectorAll('.order-checkbox').forEach(cb => cb.checked = this.checked);
        });

        function assignStaff(orderId, staffId) {
            document.getElementById('assignOrderId').value = orderId;
            document.getElementById('assignStaffId').value = staffId;
            document.getElementById('assignForm').submit();
        }
    </script>
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
