@model List<SmartWash.Models.LaundryOrder>
@{
    ViewData["Title"] = "Operations Dashboard";
    Layout = "_DashboardLayout";
    ViewData["ActivePage"] = "StaffDashboard";
    string currentFilter = ViewBag.StatusFilter ?? "Active";
    string searchTerm = ViewBag.SearchTerm ?? "";
}

<div class="row mb-4 align-items-center">
    <div class="col-md-6">
        <h2 class="fw-bold mb-1">Queue Management</h2>
        <p class="text-muted mb-0">Live order processing and status tracking</p>
    </div>
    <div class="col-md-6 text-md-end mt-3 mt-md-0">
        <div class="d-inline-flex bg-white p-1 rounded-pill shadow-sm border">
            <a asp-action="Index" asp-route-statusFilter="Active" class="btn btn-sm rounded-pill px-3 @(currentFilter == "Active" ? "btn-primary" : "btn-light")">Active</a>
            <a asp-action="Index" asp-route-statusFilter="Pending" class="btn btn-sm rounded-pill px-3 @(currentFilter == "Pending" ? "btn-primary" : "btn-light")">Pending</a>
            <a asp-action="Index" asp-route-statusFilter="InProgress" class="btn btn-sm rounded-pill px-3 @(currentFilter == "InProgress" ? "btn-primary" : "btn-light")">In Progress</a>
            <a asp-action="Index" asp-route-statusFilter="All" class="btn btn-sm rounded-pill px-3 @(currentFilter == "All" ? "btn-primary" : "btn-light")">All</a>
        </div>
    </div>
</div>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show rounded-4 border-0 shadow-sm mb-4" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show rounded-4 border-0 shadow-sm mb-4" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Search Bar -->
    <div class="card border-0 shadow-sm rounded-4 mb-4">
        <div class="card-body p-3">
            <form asp-action="Index" method="get" class="row g-2">
                <input type="hidden" name="statusFilter" value="@currentFilter" />
                <div class="col-md-10">
                    <div class="input-group">
                        <span class="input-group-text bg-white border-0 ps-3 text-muted"><i class="bi bi-search"></i></span>
                        <input type="text" name="searchTerm" class="form-control border-0 shadow-none" placeholder="Search by Customer Name or Order ID..." value="@searchTerm">
                    </div>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100 rounded-pill">Search</button>
                </div>
            </form>
        </div>
    </div>

    <div class="row g-4">
        @if (!Model.Any())
        {
            <div class="col-12 text-center py-5">
                <i class="bi bi-clipboard-x text-light-emphasis" style="font-size: 3rem;"></i>
                <h4 class="mt-3 text-muted">No orders found</h4>
            </div>
        }
        else
        {
            @foreach (var order in Model)
            {
                <div class="col-xl-4 col-md-6">
                    <div class="card border-0 shadow-sm rounded-4 h-100 transition-up">
                        <div class="card-body p-4">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <div>
                                    <h6 class="text-primary mb-1 fw-bold">Order #@order.Id.ToString().Substring(0, 8)</h6>
                                    <h5 class="fw-bold mb-0">@(order.Customer?.FullName ?? "New Customer")</h5>
                                    <div class="small text-muted mt-1"><i class="bi bi-calendar3 me-1"></i> @order.OrderDate.ToString("MMM dd, yyyy HH:mm")</div>
                                </div>
                                <div class="text-end">
                                    @switch (order.Status)
                                    {
                                        case "Pending":
                                            <span class="badge rounded-pill bg-warning text-dark px-3 py-2">Pending</span>
                                            break;
                                        case "InProgress":
                                            <span class="badge rounded-pill bg-primary px-3 py-2">InProgress</span>
                                            break;
                                        case "Ready":
                                            <span class="badge rounded-pill bg-success px-3 py-2">Ready</span>
                                            break;
                                        case "Delivered":
                                            <span class="badge rounded-pill bg-secondary px-3 py-2">Delivered</span>
                                            break;
                                        default:
                                            <span class="badge rounded-pill bg-info px-3 py-2">@order.Status</span>
                                            break;
                                    }
                                </div>
                            </div>

                            @{
                                var completedItems = order.Items.Count(i => i.IsCompleted);
                                var totalItems = order.Items.Count;
                                var progress = totalItems > 0 ? (completedItems * 100 / totalItems) : 0;
                            }
                            <div class="mb-3">
                                <div class="d-flex justify-content-between small mb-1">
                                    <span class="text-muted fw-bold">Processing Progress</span>
                                    <span class="fw-bold">@progress%</span>
                                </div>
                                <div class="progress" style="height: 6px;">
                                    <div class="progress-bar bg-primary" role="progressbar" style="width: @progress%" aria-valuenow="@progress" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                            </div>

                            <div class="bg-light rounded-4 p-3 mb-4">
                                <div class="text-uppercase small fw-bold text-muted mb-2">Order Items</div>
                                <ul class="list-unstyled mb-0 small">
                                    @foreach (var item in order.Items)
                                    {
                                        <li class="d-flex justify-content-between align-items-center mb-1">
                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox" @(item.IsCompleted ? "checked" : "") 
                                                       onchange="toggleItem('@item.Id', this)" id="item-@item.Id">
                                                <label class="form-check-label @(item.IsCompleted ? "text-decoration-line-through text-muted" : "")" for="item-@item.Id">
                                                    @item.Quantity x @item.ItemType (@item.ServiceType)
                                                </label>
                                            </div>
                                            <div class="d-flex align-items-center">
                                                <button type="button" class="btn btn-link btn-sm text-muted p-0 me-2" onclick="editNotes('@item.Id', '@item.Notes')">
                                                    <i class="bi @(string.IsNullOrEmpty(item.Notes) ? "bi-pencil-square" : "bi-chat-left-text-fill text-primary")"></i>
                                                </button>
                                                <span class="fw-bold px-2">₱@((item.Quantity * item.Price).ToString("N2"))</span>
                                            </div>
                                        </li>
                                    }
                                </ul>
                                <div class="border-top mt-2 pt-2 fw-bold d-flex justify-content-between">
                                    <span>Total Price</span>
                                    <span class="text-primary">₱@order.TotalPrice.ToString("N2")</span>
                                </div>
                            </div>

                            @if (order.CustomerUploads != null && order.CustomerUploads.Any())
                            {
                                <div class="mb-3">
                                    <div class="small fw-bold text-uppercase text-secondary mb-2">Attachments</div>
                                    <div class="d-flex flex-wrap gap-2">
                                        @foreach (var upload in order.CustomerUploads)
                                        {
                                            <a href="@upload.FileUrl" target="_blank" class="position-relative">
                                                @if (upload.FileType == "Image")
                                                {
                                                    <img src="@upload.FileUrl" class="rounded border" style="width: 50px; height: 50px; object-fit: cover;" />
                                                }
                                                else
                                                {
                                                    <div class="bg-dark text-white rounded d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                                                        <i class="bi bi-play-fill"></i>
                                                    </div>
                                                }
                                            </a>
                                        }
                                    </div>
                                </div>
                            }

                            <div class="mb-4 small border-start border-primary border-4 ps-3 py-1">
                                <div class="mb-2"><i class="bi bi-geo-alt-fill me-2 text-muted"></i> @(order.Customer?.Address ?? "No address provided")</div>
                                <div><i class="bi bi-telephone-fill me-2 text-muted"></i> @(order.Customer?.PhoneNumber ?? "No phone provided")</div>
                            </div>

                            <div class="d-grid mt-auto">
                                <form asp-action="UpdateStatus" method="post" class="d-grid gap-2">
                                    <input type="hidden" name="id" value="@order.Id" />
                                    @Html.AntiForgeryToken()
                                    
                                    @if (order.Status == "Pending")
                                    {
                                        <button name="newStatus" value="InProgress" type="submit" class="btn btn-primary rounded-pill py-2 fw-bold">
                                            <i class="bi bi-play-fill me-1"></i> Start Processing
                                        </button>
                                    }
                                    else if (order.Status == "InProgress")
                                    {
                                        <button name="newStatus" value="Ready" type="submit" class="btn btn-success rounded-pill py-2 fw-bold">
                                            <i class="bi bi-check-lg me-1"></i> Mark as Ready
                                        </button>
                                    }
                                    else if (order.Status == "Ready")
                                    {
                                        <button name="newStatus" value="Delivered" type="submit" class="btn btn-secondary rounded-pill py-2 fw-bold">
                                            <i class="bi bi-truck me-1"></i> Mark as Delivered
                                        </button>
                                    }
                                    else
                                    {
                                        <button disabled class="btn btn-light rounded-pill py-2 fw-bold border">
                                            <i class="bi bi-check2-all me-1"></i> Completed
                                        </button>
                                    }
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>

</style>

<script>
    function toggleItem(itemId, checkbox) {
        const label = checkbox.nextElementSibling;
        const antiForgeryToken = document.querySelector('input[name="__RequestVerificationToken"]').value;

        fetch('/Staff/Staff/ToggleItemCompletion', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/x-www-form-urlencoded',
                'RequestVerificationToken': antiForgeryToken
            },
            body: `itemId=${itemId}`
        })
        .then(response => {
            if (response.ok) {
                if (checkbox.checked) {
                    label.classList.add('text-decoration-line-through', 'text-muted');
                } else {
                    label.classList.remove('text-decoration-line-through', 'text-muted');
                }
            } else {
                checkbox.checked = !checkbox.checked;
                alert('Failed to update item status.');
            }
        })
        .catch(error => {
            checkbox.checked = !checkbox.checked;
            console.error('Error:', error);
        });
    }
</script>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
