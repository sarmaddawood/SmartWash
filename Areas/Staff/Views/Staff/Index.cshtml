@model List<SmartWash.Models.LaundryOrder>
@{
    ViewData["Title"] = "Operations Dashboard";
    Layout = "_DashboardLayout";
    ViewData["ActivePage"] = "StaffDashboard";
    string currentFilter = ViewBag.StatusFilter ?? "Active";
    string searchTerm = ViewBag.SearchTerm ?? "";
}

<div class="d-flex justify-content-between align-items-center mb-5">
    <div>
        <h3 class="fw-bold mb-1">Queue Management</h3>
        <p class="text-muted small mb-0 fw-medium">Live garment processing registry</p>
    </div>
    <div class="d-none d-md-flex gap-2">
        <a asp-action="Index" asp-route-statusFilter="Active" class="btn @(currentFilter == "Active" ? "btn-primary" : "btn-outline-light text-dark") btn-sm px-4">Active</a>
        <a asp-action="Index" asp-route-statusFilter="Pending" class="btn @(currentFilter == "Pending" ? "btn-primary" : "btn-outline-light text-dark") btn-sm px-4">Pending</a>
        <a asp-action="Index" asp-route-statusFilter="InProgress" class="btn @(currentFilter == "InProgress" ? "btn-primary" : "btn-outline-light text-dark") btn-sm px-4">In Progress</a>
        <a asp-action="Index" asp-route-statusFilter="All" class="btn @(currentFilter == "All" ? "btn-primary" : "btn-outline-light text-dark") btn-sm px-4">All History</a>
    </div>
</div>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show rounded-4 border-0 shadow-sm mb-4" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show rounded-4 border-0 shadow-sm mb-4" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Search Bar -->
    <div class="card border-0 shadow-sm rounded-4 mb-4">
        <div class="card-body p-3">
            <form asp-action="Index" method="get" class="row g-2">
                <input type="hidden" name="statusFilter" value="@currentFilter" />
                <div class="col-md-10">
                    <div class="input-group">
                        <span class="input-group-text bg-white border-0 ps-3 text-muted"><i class="bi bi-search"></i></span>
                        <input type="text" name="searchTerm" class="form-control border-0 shadow-none" placeholder="Search by Customer Name or Order ID..." value="@searchTerm">
                    </div>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100 rounded-pill">Search</button>
                </div>
            </form>
        </div>
    </div>

    <div class="row g-4">
        @if (!Model.Any())
        {
            <div class="col-12 text-center py-5">
                <i class="bi bi-water text-light-emphasis" style="font-size: 3rem;"></i>
                <h4 class="mt-3 text-muted">No pending operations</h4>
            </div>
        }
        else
        {
            @foreach (var order in Model)
            {
                <div class="col-xl-4 col-md-6">
                    <div class="card border-0 h-100 p-2">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-4">
                                <div>
                                    <div class="small fw-bold text-muted text-uppercase mb-1">Session #@order.Id.ToString().Substring(0, 8)</div>
                                    <h5 class="fw-bold mb-0">@(order.Customer?.FullName ?? "Member")</h5>
                                </div>
                                <span class="badge @(order.Status == "InProgress" ? "bg-primary" : "bg-light text-dark") rounded-pill px-3">@order.Status</span>
                            </div>

                            @{
                                var completedItems = order.Items.Count(i => i.IsCompleted);
                                var totalItems = order.Items.Count;
                                var progress = totalItems > 0 ? (completedItems * 100 / totalItems) : 0;
                            }
                            
                            <div class="mb-4">
                                <div class="d-flex justify-content-between small mb-2">
                                    <span class="text-muted fw-medium">Operational Progress</span>
                                    <span class="fw-bold">@progress%</span>
                                </div>
                                <div class="progress" style="height: 8px; border-radius: 10px; background: #F1F5F9;">
                                    <div class="progress-bar" style="width: @progress%; background: var(--accent-orange);"></div>
                                </div>
                            </div>

                            <div class="bg-light-subtle border rounded-4 p-3 mb-4">
                                @foreach (var item in order.Items)
                                {
                                    <div class="form-check mb-2">
                                        <input class="form-check-input" type="checkbox" @(item.IsCompleted ? "checked" : "") 
                                               onchange="toggleItem('@item.Id', this)" id="item-@item.Id">
                                        <label class="form-check-label small @(item.IsCompleted ? "text-decoration-line-through text-muted" : "fw-medium")" for="item-@item.Id">
                                            @item.Quantity x @item.ItemType
                                        </label>
                                    </div>
                                }
                            </div>

                            <div class="mb-4 small">
                                <div class="mb-2"><i class="bi bi-geo-alt me-2 text-muted"></i> @(order.Customer?.Address ?? "Remote Pickup")</div>
                                <div><i class="bi bi-telephone me-2 text-muted"></i> @(order.Customer?.PhoneNumber ?? "--")</div>
                            </div>

                            <form asp-action="UpdateStatus" method="post" class="d-grid mt-auto">
                                <input type="hidden" name="id" value="@order.Id" />
                                @Html.AntiForgeryToken()
                                
                                @if (order.Status == "Pending")
                                {
                                    <button name="newStatus" value="InProgress" type="submit" class="btn btn-primary w-100">Initialize Job</button>
                                }
                                else if (order.Status == "InProgress")
                                {
                                    <button name="newStatus" value="Ready" type="submit" class="btn btn-primary w-100">Final Verification</button>
                                }
                                else if (order.Status == "Ready")
                                {
                                    <button name="newStatus" value="Delivered" type="submit" class="btn btn-outline-dark w-100">Confirm Delivery</button>
                                }
                                else
                                {
                                    <button disabled class="btn btn-light w-100">Archived Session</button>
                                }
                            </form>
                        </div>
                    </div>
                </div>
            }
        }
    </div>

</style>

<script>
    function toggleItem(itemId, checkbox) {
        const label = checkbox.nextElementSibling;
        const antiForgeryToken = document.querySelector('input[name="__RequestVerificationToken"]').value;

        fetch('/Staff/Staff/ToggleItemCompletion', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/x-www-form-urlencoded',
                'RequestVerificationToken': antiForgeryToken
            },
            body: `itemId=${itemId}`
        })
        .then(response => {
            if (response.ok) {
                if (checkbox.checked) {
                    label.classList.add('text-decoration-line-through', 'text-muted');
                } else {
                    label.classList.remove('text-decoration-line-through', 'text-muted');
                }
            } else {
                checkbox.checked = !checkbox.checked;
                alert('Failed to update item status.');
            }
        })
        .catch(error => {
            checkbox.checked = !checkbox.checked;
            console.error('Error:', error);
        });
    }

    function editNotes(itemId, currentNotes) {
        const newNotes = prompt("Enter handling notes for this item:", currentNotes || "");
        if (newNotes === null) return;

        const antiForgeryToken = document.querySelector('input[name="__RequestVerificationToken"]').value;

        fetch('/Staff/Staff/UpdateItemNotes', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/x-www-form-urlencoded',
                'RequestVerificationToken': antiForgeryToken
            },
            body: `itemId=${itemId}&notes=${encodeURIComponent(newNotes)}`
        })
        .then(response => {
            if (response.ok) {
                location.reload();
            } else {
                alert('Failed to update notes.');
            }
        });
    }
</script>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
