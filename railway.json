{
  "$schema": "https://schema.railway.app/railway.schema.json",
  "build": {
    "builder": "railpack",
    "buildCommand": "dotnet restore && dotnet publish -c Release -o ./out --no-restore",
    "installPackages": [
      "libicu-dev",
      "libgd3",
      "libjpeg62-turbo",
      "fontconfig-config",
      "fonts-dejavu-core"
    ]
  },
  "deploy": {
    "startCommand": "cd ./out && ASPNETCORE_URLS=http://0.0.0.0:${PORT:-8080} dotnet $(basename *.deps.json .deps.json).dll",
    "healthcheckPath": "/",
    "healthcheckTimeout": 300,
    "restartPolicyType": "on_failure",
    "restartPolicyMaxRetries": 3
  },
  "plugins": {
    "dotnet": {
      "version": "8.0.418"
    }
  },
  "env": {
    "DOTNET_RUNNING_IN_CONTAINER": "true",
    "ASPNETCORE_ENVIRONMENT": "Production"
  }
}