<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SmartWash</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --sidebar-width: 260px;
            --header-height: 64px;
        }

        body { 
            font-family: 'Inter', sans-serif; 
            background-color: #f0f2f5; 
            transition: background-color 0.3s ease; 
            overflow-x: hidden;
        }

        .dashboard-container { display: flex; min-height: 100vh; }

        .sidebar { 
            width: var(--sidebar-width); 
            background: #fff; 
            border-right: 1px solid #e5e7eb; 
            position: fixed; 
            height: 100vh; 
            padding-top: 1.5rem; 
            transition: all 0.3s ease; 
            z-index: 1050; 
            left: 0;
        }

        .main-content { 
            flex: 1; 
            margin-left: var(--sidebar-width); 
            padding: 1.5rem; 
            background-color: inherit; 
            min-width: 0;
            transition: margin-left 0.3s ease;
        }

        .sticky-header {
            position: sticky;
            top: 0;
            z-index: 1000;
            background-color: rgba(255, 255, 255, 0.8) !important;
            backdrop-filter: blur(10px);
            border-bottom: 1px solid #e5e7eb;
            margin: -2rem -1.5rem 2rem -1.5rem;
            padding: 1rem 1.5rem;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        /* Dark Mode Variables */
        body.dark-mode { background-color: #111827; color: #f9fafb; }
        body.dark-mode .sidebar { background-color: #1f2937; border-color: #374151; }
        body.dark-mode .nav-link { color: #d1d5db; }
        body.dark-mode .nav-link:hover { background-color: #374151; color: #60a5fa; }
        body.dark-mode .nav-link.active { background-color: rgba(37, 99, 235, 0.2); color: #60a5fa; }
        body.dark-mode .card, body.dark-mode .bg-white, body.dark-mode .bg-light { background-color: #1f2937 !important; color: #f9fafb; border-color: #374151 !important; }
        body.dark-mode .text-muted { color: #9ca3af !important; }
        body.dark-mode .table { color: #f9fafb; border-color: #374151; }
        body.dark-mode thead { background-color: #374151 !important; color: #fff; }
        body.dark-mode .sticky-header { background-color: rgba(31, 41, 55, 0.8) !important; border-bottom-color: #374151; }
        body.dark-mode .btn-light { background-color: #374151; border-color: #4b5563; color: #f9fafb; }

        .nav-link { 
            color: #4b5563; 
            font-weight: 500; 
            padding: 0.8rem 1.2rem; 
            border-radius: 0.5rem; 
            margin: 0.2rem 1rem; 
            display: flex; 
            align-items: center; 
            min-height: 48px; /* Touch friendly */
        }
        .nav-link:hover { background-color: #f3f4f6; color: #2563eb; }
        .nav-link.active { background-color: #eff6ff; color: #2563eb; }
        .nav-link i { margin-right: 0.8rem; font-size: 1.25rem; }
        
        /* Mobile Specific */
        @@media (max-width: 991.98px) {
            .sidebar { 
                transform: translateX(-100%); 
            }
            .sidebar.show { 
                transform: translateX(0); 
            }
            .main-content { 
                margin-left: 0; 
                padding: 1rem;
            }
            .sticky-header {
                margin: -1.5rem -1rem 1.5rem -1rem;
                padding: 0.75rem 1rem;
            }
            .sidebar-overlay {
                display: none;
                position: fixed;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background: rgba(0,0,0,0.5);
                z-index: 1040;
            }
            .sidebar-overlay.show {
                display: block;
            }
        }

        .table-responsive {
            border-radius: 0.5rem;
            overflow-x: auto;
            -webkit-overflow-scrolling: touch;
        }

        .btn {
            min-height: 44px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
        }
        
        .card-stat { border-radius: 1rem; border: none; box-shadow: 0 4px 6px -1px rgba(0,0,0,0.1); }
    </style>
</head>
<body>
    <div class="sidebar-overlay" id="sidebarOverlay" onclick="toggleSidebar()"></div>

    <div class="dashboard-container">
        <!-- Sidebar Navigation -->
        <aside class="sidebar shadow-sm" id="sidebar">
            <div class="px-4 mb-4 d-flex align-items-center justify-content-between">
                <div>
                    <span class="fs-4 fw-bold text-primary">Smart</span><span class="fs-4 fw-bold">Wash</span>
                </div>
                <button class="btn btn-sm d-lg-none" onclick="toggleSidebar()">
                    <i class="bi bi-x-lg"></i>
                </button>
            </div>
            
            <nav class="nav flex-column mb-auto">
                @if (User.IsInRole("Admin"))
                {
                    <div class="px-4 mb-2 small text-muted fw-bold text-uppercase ls-wide">Admin Control</div>
                    <a class="nav-link @(ViewData["ActivePage"]?.ToString() == "AdminDashboard" ? "active" : "")" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
                        <i class="bi bi-speedometer2"></i> Executive Overview
                    </a>
                    <a class="nav-link @(ViewData["ActivePage"]?.ToString() == "AdminUsers" ? "active" : "")" asp-area="Admin" asp-controller="Dashboard" asp-action="Users">
                        <i class="bi bi-people"></i> Staff & Users
                    </a>
                    <a class="nav-link @(ViewData["ActivePage"]?.ToString() == "AdminPricing" ? "active" : "")" asp-area="Admin" asp-controller="Dashboard" asp-action="Pricing">
                        <i class="bi bi-tag"></i> Manage Pricing
                    </a>
                    <hr class="mx-3 my-3">
                }
                
                @if (User.IsInRole("Staff"))
                {
                    <div class="px-4 mb-2 small text-muted fw-bold text-uppercase ls-wide">Staff Console</div>
                    <a class="nav-link @(ViewData["ActivePage"]?.ToString() == "StaffDashboard" ? "active" : "")" asp-area="Staff" asp-controller="Staff" asp-action="Index">
                        <i class="bi bi-clipboard-data"></i> Operations
                    </a>
                    <hr class="mx-3 my-3">
                }

                <div class="px-4 mb-2 small text-muted fw-bold text-uppercase ls-wide">User Menu</div>
                <a class="nav-link @(ViewData["ActivePage"]?.ToString() == "CustomerDashboard" ? "active" : "")" asp-area="" asp-controller="DashboardRedirect" asp-action="Index">
                    <i class="bi bi-grid"></i> My Dashboard
                </a>
                <a class="nav-link" asp-area="" asp-controller="Service" asp-action="Index">
                    <i class="bi bi-plus-circle"></i> Place Order
                </a>
                <form class="nav-link p-0 m-0 border-0" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post">
                    <button type="submit" class="nav-link border-0 bg-transparent w-100 text-start m-0">
                        <i class="bi bi-box-arrow-right"></i> Logout
                    </button>
                </form>
            </nav>
        </aside>

        <!-- Main Content Area -->
        <main class="main-content">
            <header class="sticky-header shadow-sm bg-white rounded-4">
                <div class="d-flex align-items-center">
                    <button class="btn btn-light rounded-circle me-3 d-lg-none" onclick="toggleSidebar()">
                        <i class="bi bi-list fs-4"></i>
                    </button>
                    <span class="text-muted fw-medium d-none d-sm-inline">Welcome back, <strong>@User.Identity?.Name</strong></span>
                    <span class="text-muted fw-medium d-inline d-sm-none">Hello!</span>
                 </div>
                <div class="d-flex align-items-center">
                    <button class="btn btn-light rounded-circle me-2" onclick="toggleDarkMode()" title="Toggle Dark Mode">
                        <i class="bi bi-moon-stars" id="themeIcon"></i>
                    </button>
                    <a class="btn btn-light rounded-circle me-2" asp-area="" asp-controller="Home" asp-action="Index" title="View Frontend">
                        <i class="bi bi-globe"></i>
                    </a>
                </div>
            </header>

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show rounded-3 shadow-sm border-0 mb-4" role="alert">
                    <i class="bi bi-check-circle-fill me-2"></i> @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show rounded-3 shadow-sm border-0 mb-4" role="alert">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i> @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @RenderBody()
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    
    <script>
        // Sidebar Toggle for Mobile
        function toggleSidebar() {
            const sidebar = document.getElementById('sidebar');
            const overlay = document.getElementById('sidebarOverlay');
            sidebar.classList.toggle('show');
            overlay.classList.toggle('show');
        }

        // Dark Mode Persistence
        if (localStorage.getItem('theme') === 'dark') {
            document.body.classList.add('dark-mode');
            document.getElementById('themeIcon').classList.replace('bi-moon-stars', 'bi-sun');
        }

        function toggleDarkMode() {
            const body = document.body;
            const icon = document.getElementById('themeIcon');
            body.classList.toggle('dark-mode');
            
            if (body.classList.contains('dark-mode')) {
                localStorage.setItem('theme', 'dark');
                icon.classList.replace('bi-moon-stars', 'bi-sun');
            } else {
                localStorage.setItem('theme', 'light');
                icon.classList.replace('bi-sun', 'bi-moon-stars');
            }
        }
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
