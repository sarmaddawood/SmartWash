<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SmartWash</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body { font-family: 'Inter', sans-serif; background-color: #f0f2f5; }
        .dashboard-container { display: flex; min-height: 100vh; }
        .sidebar { width: 260px; background: #fff; border-right: 1px solid #e5e7eb; position: fixed; height: 100vh; padding-top: 1.5rem; transition: all 0.3s ease; z-index: 1000; }
        .main-content { flex: 1; margin-left: 260px; padding: 2rem; }
        .nav-link { color: #4b5563; font-weight: 500; padding: 0.8rem 1.5rem; border-radius: 0.5rem; margin: 0.2rem 1rem; display: flex; align-items: center; }
        .nav-link:hover { background-color: #f3f4f6; color: #2563eb; }
        .nav-link.active { background-color: #eff6ff; color: #2563eb; }
        .nav-link i { margin-right: 0.8rem; font-size: 1.25rem; }
        
        @@media (max-width: 991.98px) {
            .sidebar { transform: translateX(-100%); width: 0; }
            .sidebar.show { transform: translateX(0); width: 260px; }
            .main-content { margin-left: 0; }
        }
        
        .card-stat { border-radius: 1rem; border: none; box-shadow: 0 4px 6px -1px rgba(0,0,0,0.1); }
    </style>
</head>
<body>
    <div class="dashboard-container">
        <!-- Sidebar -->
        <div class="sidebar" id="sidebar">
            <div class="px-4 mb-4">
                <h4 class="fw-bold text-primary mb-0"><i class="bi bi-droplet-fill me-2"></i>SmartWash</h4>
            </div>
            <nav>
                @if (User.IsInRole("Admin"))
                {
                    <a class="nav-link @(ViewData["ActivePage"]?.ToString() == "AdminDashboard" ? "active" : "")" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
                        <i class="bi bi-speedometer2"></i> Admin Control
                    </a>
                    <a class="nav-link @(ViewData["ActivePage"]?.ToString() == "AdminUsers" ? "active" : "")" asp-area="Admin" asp-controller="Dashboard" asp-action="Users">
                        <i class="bi bi-people"></i> Staff & Users
                    </a>
                    <a class="nav-link @(ViewData["ActivePage"]?.ToString() == "AdminPricing" ? "active" : "")" asp-area="Admin" asp-controller="Dashboard" asp-action="Pricing">
                        <i class="bi bi-currency-dollar"></i> Manage Pricing
                    </a>
                }
                @if (User.IsInRole("Staff") || User.IsInRole("Admin"))
                {
                    <a class="nav-link @(ViewData["ActivePage"]?.ToString() == "StaffDashboard" ? "active" : "")" asp-area="Staff" asp-controller="Staff" asp-action="Index">
                        <i class="bi bi-gear-wide-connected"></i> Operations
                    </a>
                    <a class="nav-link" asp-area="" asp-controller="Payments" asp-action="Manage">
                        <i class="bi bi-credit-card"></i> Payments
                    </a>
                }
                
                <hr class="mx-4 my-3 opacity-10">
                
                <a class="nav-link" asp-area="" asp-controller="DashboardRedirect" asp-action="Index">
                    <i class="bi bi-house-door"></i> My Dashboard
                </a>
                <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Orders" ? "active" : "")" asp-area="" asp-controller="Orders" asp-action="Create">
                    <i class="bi bi-plus-circle"></i> New Order
                </a>
                
                <div class="mt-auto pt-5">
                    <a class="nav-link text-danger" href="javascript:document.getElementById('logoutForm').submit();">
                        <i class="bi bi-box-arrow-right"></i> Logout
                    </a>
                    <form id="logoutForm" class="d-none" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })"></form>
                </div>
            </nav>
        </div>

        <!-- Main Content -->
        <div class="main-content">
            <header class="d-flex justify-content-between align-items-center mb-4">
                <div>
                   <button class="btn btn-light d-lg-none me-2" onclick="document.getElementById('sidebar').classList.toggle('show')">
                       <i class="bi bi-list"></i>
                   </button>
                   <span class="text-muted fw-medium">Welcome back, <strong>@User.Identity?.Name</strong></span>
                </div>
                <div class="d-flex align-items-center">
                    <a class="btn btn-light rounded-circle me-2" asp-area="" asp-controller="Home" asp-action="Index" title="View Frontend">
                        <i class="bi bi-globe"></i>
                    </a>
                </div>
            </header>

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show rounded-3 shadow-sm border-0 mb-4" role="alert">
                    <i class="bi bi-check-circle-fill me-2"></i> @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show rounded-3 shadow-sm border-0 mb-4" role="alert">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i> @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @RenderBody()
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
