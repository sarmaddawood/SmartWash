@model List<SmartWash.Models.LaundryOrder>
@{
    ViewData["Title"] = "My Dashboard";
    Layout = "_DashboardLayout";
}

<div class="d-flex justify-content-between align-items-center mb-5">
    <div>
        <h3 class="fw-bold mb-1 brand-logo">Your Wardrobe</h3>
        <p class="text-muted small mb-0 fw-medium">Real-time status tracking and history</p>
    </div>
    <a asp-controller="Orders" asp-action="Create" class="btn btn-primary d-flex align-items-center">
        <i class="bi bi-plus-lg me-2"></i> Create Order
    </a>
</div>

    @if (!Model.Any())
    {
        <div class="card p-5 text-center border-0 shadow-sm rounded-4">
            <div class="mb-4">
                <i class="bi bi-box2 text-light-emphasis" style="font-size: 4rem;"></i>
            </div>
            <h3>No orders yet</h3>
            <p class="text-muted">Start by placing your first laundry order today!</p>
            <div class="mt-3">
                <a asp-controller="Orders" asp-action="Create" class="btn btn-outline-primary rounded-pill px-4">Get Started</a>
            </div>
        </div>
    }
    else
    {
        <div class="row g-4">
            <div class="col-lg-8">
                <div class="card border-0">
                    <div class="card-header bg-white py-4 px-4 border-0">
                        <h5 class="mb-0 fw-bold">Recent Deliveries</h5>
                    </div>
                    <div class="table-responsive">
                        <table class="table align-middle mb-0">
                            <thead>
                                <tr>
                                    <th class="ps-4 border-0 text-muted small fw-bold text-uppercase">Identification</th>
                                    <th class="border-0 text-muted small fw-bold text-uppercase">Initiated</th>
                                    <th class="border-0 text-muted small fw-bold text-uppercase">Volume</th>
                                    <th class="border-0 text-muted small fw-bold text-uppercase">Condition</th>
                                    <th class="border-0 text-muted small fw-bold text-uppercase text-end pe-4">Settlement</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var order in Model)
                                {
                                    <tr style="border-bottom: 8px solid transparent;">
                                        <td class="ps-4">
                                            <span class="fw-bold text-dark">#@order.Id.ToString().Substring(0, 8)</span>
                                        </td>
                                        <td><span class="text-muted">@order.OrderDate.ToString("MMM dd, yyyy")</span></td>
                                        <td><span class="badge bg-light text-dark rounded-pill px-3">@order.Items.Sum(i => i.Quantity) Garments</span></td>
                                        <td>
                                            @switch (order.Status)
                                            {
                                                case "Pending":
                                                    <span class="badge rounded-pill bg-warning text-white px-3"><i class="bi bi-clock me-1"></i> Waiting</span>
                                                    break;
                                                case "InProgress":
                                                    <div class="d-flex flex-column" style="min-width: 140px;">
                                                        <span class="text-primary small fw-bold mb-1"><i class="bi bi-gear-fill me-1"></i> Processing</span>
                                                        @{
                                                            var progress = order.Items.Count > 0 ? (order.Items.Count(i => i.IsCompleted) * 100 / order.Items.Count) : 0;
                                                        }
                                                        <div class="progress" style="height: 6px; border-radius: 10px; background: #E2E8F0;">
                                                            <div class="progress-bar" role="progressbar" style="width: @progress%; background: var(--accent-orange);"></div>
                                                        </div>
                                                    </div>
                                                    break;
                                                case "Ready":
                                                    <span class="badge rounded-pill bg-info text-white px-3">Ready</span>
                                                    break;
                                                case "Delivered":
                                                    <span class="badge rounded-pill bg-success text-white px-3"><i class="bi bi-check-circle me-1"></i> Finalized</span>
                                                    break;
                                                default:
                                                    <span class="badge rounded-pill bg-secondary text-white px-3">@order.Status</span>
                                                    break;
                                            }
                                        </td>
                                        <td class="text-end pe-4">
                                            @if (order.Payment == null || order.Payment.Status != "Paid")
                                            {
                                                <a asp-controller="Payments" asp-action="Checkout" asp-route-id="@order.Id" class="btn btn-primary btn-sm px-4">Pay ₱@order.TotalPrice.ToString("N2")</a>
                                            }
                                            else
                                            {
                                                <div class="d-flex justify-content-end align-items-center">
                                                    <span class="text-success small fw-bold me-3">Paid</span>
                                                    <a asp-controller="Payments" asp-action="DownloadInvoice" asp-route-id="@order.Id" class="btn btn-outline-light btn-sm rounded-circle text-muted">
                                                        <i class="bi bi-file-earmark-pdf"></i>
                                                    </a>
                                                </div>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <!-- My Card (Reference Design) -->
                <div class="card border-0 mb-4 p-4 text-white shadow-lg" style="background: linear-gradient(135deg, #FF8F00 0%, #FFB300 100%);">
                    <div class="d-flex justify-content-between align-items-center mb-5">
                        <i class="bi bi-water fs-2"></i>
                        <span class="small fw-bold">SMARTWASH PREMIER</span>
                    </div>
                    <div class="h3 fw-bold mb-1">@User.Identity?.Name</div>
                    <p class="small text-white-50 mb-4">Elite Member Category</p>
                    
                    <div class="row g-0 mt-2">
                        <div class="col-6">
                            <div class="small text-white-50">Active Jobs</div>
                            <div class="h4 fw-bold mb-0">@Model.Count(o => o.Status != "Delivered")</div>
                        </div>
                        <div class="col-6">
                            <div class="small text-white-50">Total Spent</div>
                            <div class="h4 fw-bold mb-0">₱@Model.Where(o => o.Payment?.Status == "Paid").Sum(o => o.TotalPrice).ToString("N0")</div>
                        </div>
                    </div>
                </div>

                <div class="card border-0 mb-4">
                    <div class="card-header bg-white py-3 border-0">
                        <h6 class="mb-0 fw-bold">Transaction Ledger</h6>
                    </div>
                    <div class="table-responsive">
                        <table class="table align-middle mb-0 small">
                            <tbody>
                                @foreach (var order in Model.Where(o => o.Payment != null).OrderByDescending(o => o.OrderDate).Take(3))
                                {
                                    <tr>
                                        <td class="ps-3 fw-bold text-muted">#@order.Id.ToString().Substring(0, 8)</td>
                                        <td class="text-end pe-3 fw-bold">₱@order.TotalPrice.ToString("N0")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    }

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
