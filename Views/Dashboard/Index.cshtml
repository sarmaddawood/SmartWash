@model List<SmartWash.Models.LaundryOrder>
@{
    ViewData["Title"] = "My Dashboard";
    Layout = "_DashboardLayout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="fw-bold mb-1 text-dark">My Orders</h2>
        <p class="text-muted mb-0">Track your laundry and dry cleaning progress</p>
    </div>
    <a asp-controller="Orders" asp-action="Create" class="btn btn-primary btn-lg rounded-pill shadow-sm px-4">
        <i class="bi bi-plus-lg me-2"></i> New Order
    </a>
</div>

    @if (!Model.Any())
    {
        <div class="card p-5 text-center border-0 shadow-sm rounded-4">
            <div class="mb-4">
                <i class="bi bi-box2 text-light-emphasis" style="font-size: 4rem;"></i>
            </div>
            <h3>No orders yet</h3>
            <p class="text-muted">Start by placing your first laundry order today!</p>
            <div class="mt-3">
                <a asp-controller="Orders" asp-action="Create" class="btn btn-outline-primary rounded-pill px-4">Get Started</a>
            </div>
        </div>
    }
    else
    {
        <div class="row g-4">
            <div class="col-lg-8">
                <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
                    <div class="card-header bg-white py-3 border-0">
                        <h5 class="mb-0 fw-bold">Recent Orders</h5>
                    </div>
                    <div class="table-responsive">
                        <table class="table align-middle mb-0">
                            <thead class="bg-light">
                                <tr>
                                    <th class="ps-4">Order ID</th>
                                    <th>Date</th>
                                    <th>Items</th>
                                    <th>Status</th>
                                    <th>Total</th>
                                    <th class="text-end pe-4">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var order in Model)
                                {
                                    <tr>
                                        <td class="ps-4">
                                            <span class="text-secondary small">#@order.Id.ToString().Substring(0, 8)</span>
                                        </td>
                                        <td>@order.OrderDate.ToString("MMM dd, yyyy")</td>
                                        <td>@order.Items.Sum(i => i.Quantity) Units</td>
                                        <td>
                                            @switch (order.Status)
                                            {
                                                case "Pending":
                                                    <span class="badge rounded-pill bg-warning-subtle text-warning-emphasis px-3">Pending</span>
                                                    break;
                                                case "InProgress":
                                                    <div class="d-flex flex-column" style="min-width: 120px;">
                                                        <span class="badge rounded-pill bg-primary-subtle text-primary-emphasis px-3 mb-1">In Progress</span>
                                                        @{
                                                            var progress = order.Items.Count > 0 ? (order.Items.Count(i => i.IsCompleted) * 100 / order.Items.Count) : 0;
                                                        }
                                                        <div class="progress" style="height: 4px;">
                                                            <div class="progress-bar bg-primary" role="progressbar" style="width: @progress%"></div>
                                                        </div>
                                                    </div>
                                                    break;
                                                case "Ready":
                                                    <span class="badge rounded-pill bg-info-subtle text-info-emphasis px-3">Ready</span>
                                                    break;
                                                case "Delivered":
                                                    <span class="badge rounded-pill bg-success-subtle text-success-emphasis px-3">Delivered</span>
                                                    break;
                                                default:
                                                    <span class="badge rounded-pill bg-secondary-subtle px-3">@order.Status</span>
                                                    break;
                                            }
                                        </td>
                                        <td class="fw-bold">₱@order.TotalPrice.ToString("N2")</td>
                                        <td class="text-end pe-4">
                                            <div class="d-flex justify-content-end gap-2">
                                                <!-- Media Button -->
                                                <button type="button" class="btn btn-sm btn-outline-info rounded-pill" data-bs-toggle="collapse" data-bs-target="#media-@order.Id">
                                                    <i class="bi bi-camera"></i>
                                                </button>

                                                <a asp-controller="Payments" asp-action="DownloadInvoice" asp-route-id="@order.Id" class="btn btn-sm btn-outline-secondary rounded-pill" title="Download Invoice">
                                                    <i class="bi bi-file-earmark-pdf"></i>
                                                </a>
                                                @if (order.Payment == null || order.Payment.Status != "Paid")
                                                {
                                                    <a asp-controller="Payments" asp-action="Checkout" asp-route-id="@order.Id" class="btn btn-sm btn-primary rounded-pill">Pay Now</a>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-success-subtle text-success-emphasis rounded-pill px-3 py-2 d-flex align-items-center">Paid</span>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                    <tr class="collapse" id="media-@order.Id">
                                        <td colspan="6" class="bg-light-subtle p-3">
                                            <div class="row">
                                                <div class="col-md-4">
                                                    <h6>Attach Media</h6>
                                                    <form asp-controller="Uploads" asp-action="UploadMedia" method="post" enctype="multipart/form-data" class="mt-2">
                                                        <input type="hidden" name="orderId" value="@order.Id" />
                                                        <div class="input-group input-group-sm mb-2">
                                                            <input type="file" name="file" class="form-control" accept="image/*,video/*">
                                                            <button class="btn btn-primary" type="submit">Upload</button>
                                                        </div>
                                                        <small class="text-muted">Max size: 10MB (Images/Videos)</small>
                                                    </form>
                                                </div>
                                                <div class="col-md-8">
                                                    <h6>Order Gallery</h6>
                                                    <div class="d-flex flex-wrap gap-2 mt-2">
                                                        @if (order.CustomerUploads.Any())
                                                        {
                                                            @foreach (var upload in order.CustomerUploads)
                                                            {
                                                                <div class="position-relative">
                                                                    @if (upload.FileType == "Image")
                                                                    {
                                                                        <a href="@upload.FileUrl" target="_blank">
                                                                            <img src="@upload.FileUrl" class="rounded shadow-sm" style="width: 80px; height: 80px; object-fit: cover;" />
                                                                        </a>
                                                                    }
                                                                    else
                                                                    {
                                                                        <a href="@upload.FileUrl" target="_blank" class="bg-dark text-white rounded d-flex align-items-center justify-content-center shadow-sm" style="width: 80px; height: 80px;">
                                                                            <i class="bi bi-play-circle fs-3"></i>
                                                                        </a>
                                                                    }
                                                                </div>
                                                            }
                                                        }
                                                        else
                                                        {
                                                            <p class="small text-muted mb-0">No media attached yet.</p>
                                                        }
                                                    </div>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="card border-0 shadow-sm rounded-4 mb-4">
                    <div class="card-body p-4 text-center">
                        <div class="rounded-circle bg-primary-subtle d-inline-flex align-items-center justify-content-center mb-3" style="width: 64px; height: 64px;">
                            <i class="bi bi-person text-primary fs-3"></i>
                        </div>
                        <h5 class="fw-bold mb-1">My Stats</h5>
                        <div class="row g-0 mt-3 pt-3 border-top">
                            <div class="col-6 border-end">
                                <div class="h3 mb-0 fw-bold">@Model.Count</div>
                                <div class="small text-muted">Total Orders</div>
                            </div>
                            <div class="col-6">
                                <div class="h3 mb-0 fw-bold">@Model.Count(o => o.Status != "Delivered")</div>
                                <div class="small text-muted">Active</div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="card border-0 shadow-sm rounded-4 bg-primary text-white p-4">
                    <h5 class="fw-bold mb-3">Need Help?</h5>
                    <p class="small opacity-75">Our support team is available 24/7 to assist with your laundry and delivery needs.</p>
                    <button class="btn btn-light btn-sm rounded-pill px-4">Contact Support</button>
                </div>

                <div class="card border-0 shadow-sm rounded-4 mt-4 overflow-hidden">
                    <div class="card-header bg-white py-3 border-0">
                        <h5 class="mb-0 fw-bold">Recent Payments</h5>
                    </div>
                    <div class="table-responsive">
                        <table class="table align-middle mb-0 small">
                            <tbody>
                                @foreach (var order in Model.Where(o => o.Payment != null).OrderByDescending(o => o.OrderDate).Take(5))
                                {
                                    <tr>
                                        <td class="ps-3">#@order.Id.ToString().Substring(0, 8)</td>
                                        <td>₱@order.TotalPrice.ToString("N2")</td>
                                        <td>
                                            @if (order.Payment.Status == "Paid")
                                            {
                                                <span class="text-success fw-bold">Paid</span>
                                            }
                                            else
                                            {
                                                <span class="text-warning fw-bold">Pending</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    }

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
