@model SmartWash.Models.LaundryOrder
@{
    ViewData["Title"] = "Secure Checkout";
    Layout = "_DashboardLayout";
}

<div class="row justify-content-center">
    <div class="col-lg-8 col-xl-6">
        <div class="text-center mb-5">
            <h2 class="fw-bold text-dark">Secure Checkout</h2>
            <p class="text-muted">Finalize your payment to confirm your laundry service</p>
        </div>

        <div class="card border-0 shadow-sm rounded-4 overflow-hidden mb-4">
            <div class="card-body p-0">
                <div class="p-4 p-md-5 border-bottom">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h5 class="fw-bold mb-0">Order Summary</h5>
                        <span class="badge bg-primary-subtle text-primary px-3 rounded-pill ls-wide text-uppercase small">#@Model.Id.ToString().Substring(0, 8)</span>
                    </div>

                    @foreach (var item in Model.Items)
                    {
                        <div class="d-flex justify-content-between mb-2">
                            <span class="text-muted">@item.Quantity x @item.ItemType (@item.ServiceType)</span>
                            <span class="fw-semibold">₱@((item.Quantity * item.Price).ToString("N2"))</span>
                        </div>
                    }

                    <div class="d-flex justify-content-between mt-4 pt-3 border-top">
                        <span class="h5 fw-bold mb-0">Total Amount</span>
                        <span class="h5 fw-bold mb-0 text-primary">₱@Model.TotalPrice.ToString("N2")</span>
                    </div>
                </div>

                <div class="p-4 p-md-5 bg-light-subtle">
                    <div class="d-flex align-items-center mb-4">
                        <div class="bg-primary text-white p-3 rounded-4 me-3 shadow-sm">
                            <i class="bi bi-shield-check fs-4"></i>
                        </div>
                        <div>
                            <h6 class="fw-bold mb-0">Secure Demo Payment</h6>
                            <p class="small text-muted mb-0">This is a simulation using mock payment processing.</p>
                        </div>
                    </div>

                    <form asp-action="ProcessPayment" method="post">
                        <input type="hidden" name="orderId" value="@Model.Id" />
                        <div class="mb-4">
                            <div class="bg-white p-3 rounded-3 border mb-3 d-flex align-items-center shadow-sm">
                                <i class="bi bi-credit-card-2-front fs-4 text-muted me-3"></i>
                                <span class="fw-medium">•••• •••• •••• 4242</span>
                                <span class="ms-auto small text-muted">08/29</span>
                            </div>
                        </div>

                        <div class="d-grid gap-3">
                            <button type="submit" class="btn btn-primary btn-lg rounded-pill shadow-sm py-3 fw-bold">
                                Confirm & Pay ₱@Model.TotalPrice.ToString("N2")
                            </button>
                            <a asp-controller="Dashboard" asp-action="Index" class="btn btn-link text-muted text-decoration-none small">
                                <i class="bi bi-arrow-left me-1"></i> Cancel and go back
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        
        <div class="text-center">
            <p class="small text-muted"><i class="bi bi-lock-fill me-1"></i> Your data is protected with industrial-grade encryption.</p>
        </div>
    </div>
</div>
